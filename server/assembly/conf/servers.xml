    <tables>
        <table>
            <table_name>user</table_name>
            <split_columns> <!-- 分表字段 -->
                <column>id</column>
            </split_columns>
            <master_group>group1</master_group>
            <brother_group>group2</brother_group>   
            <!-- 热备份的group -->
        </table>
    </tables>
</cluster>
