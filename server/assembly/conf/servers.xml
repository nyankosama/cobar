<!DOCTYPE cluster SYSTEM "servers.dtd">
<cluster>
    <groups>
        <group>
            <name>group1</name>
            <servers>
                <server>
                    <id>1</id>
                    <description></description>
                    <host>mysql.superid.cn</host>
                    <port>3306</port>
                    <db_name>dbtest1</db_name>
                    <user>superid</user>
                    <password>superid</password>
